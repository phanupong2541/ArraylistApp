<Window x:Class="ArraylistApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArraylistApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-6.4,-20">
        <Button Content="Add" HorizontalAlignment="Left" Margin="153,172,0,0" VerticalAlignment="Top" Width="125" Height="59" Click="btnAdd"/>
        <Button x:Name="btnRemove" Content="Remove&#xD;&#xA;" HorizontalAlignment="Left" Margin="317,172,0,0" VerticalAlignment="Top" Width="155" Height="59" Click="btnRemove_Click"/>
        <Button Content="Show All" HorizontalAlignment="Left" Margin="513,172,0,0" VerticalAlignment="Top" Width="106" Height="59" Click="btnShow"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="26" Margin="153,121,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="575" TextChanged="txtName_TextChanged"/>

    </Grid>
</Window>
